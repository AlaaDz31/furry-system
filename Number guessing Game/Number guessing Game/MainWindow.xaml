<Window x:Class="Number_guessing_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Number_guessing_Game"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="350" Width="525">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE45809" Offset="0"/>
                <GradientStop Color="#FF40AC80" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <CheckBox x:Name="checkBox" Content="EASY&#x9;" HorizontalAlignment="Left" Margin="252,82,0,0" VerticalAlignment="Top" Checked="checkBox_Checked"/>
        <CheckBox x:Name="checkBox1" Content="MED" HorizontalAlignment="Left" Margin="252,113,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox2" Content="HARD" HorizontalAlignment="Left" Margin="252,146,0,0" VerticalAlignment="Top" Checked="checkBox2_Checked"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="221,200,0,0" VerticalAlignment="Top" Width="102" Height="31" Click="button_Click"/>

    </Grid>
</Window>
